@using prjWeb.Models;
@model List<prjWeb.Models.CCustomer>
@{
    ViewBag.Title = "List";
}

<h2>客戶資料一覽表</h2>
@using (Html.BeginForm())
{
    <p>
        關鍵字
        @Html.TextBox("txtKeyword")
        <input type="submit" value="查詢">
    </p>
}
<div>
    <p>
        <a href="~/Customer/Create">新增客戶</a>  @*通向https://localhost:44337/Customer/Create的連結*@
    </p>
</div>


<table class="table " >
    <tr>
        <td>序</td>
        <td>姓名</td>
        <td>電話</td>
        <td>電子郵件</td>
        <td>地址</td>
        <td>密碼</td>
        <td>編輯</td>
        <td>刪除</td>
    </tr>
    @{
        int count = 0;
        foreach (CCustomer t in Model)
        {
            count++;
        <tr>
            <td>@count</td>
            <td>@t.fName</td>
            <td>@t.fPhone</td>
            <td>@t.fEmail</td>
            <td>@t.fAddress</td>
            <td>@t.fPassword</td>
            @* 修改 *@
            <td>@Html.ActionLink("修改", "Edit", "Customer", new { id = t.fId }, new { @class = "btn btn-success" })</td>
            @* 匿名類別，給ID，產生onclick *@
            <td>@Html.ActionLink("刪除", "Delete", "Customer", new { id = t.fId }, new { onclick = "return confirm('確定要刪除嗎')" , Class = "btn btn-warning" })</td>
        </tr>
        }
    }
</table>